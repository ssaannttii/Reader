{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Reader",
  "version": "0.1.0",
  "identifier": "com.reader.app",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ../ui",
    "beforeBuildCommand": "npm run build --prefix ../ui",
    "frontendDist": "../ui/dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "identifier": "com.reader.app",
    "resources": [
      "../assets/voices",
      "../assets/lexicon.es.json",
      "../runtime"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "Reader",
        "width": 1280,
        "height": 720,
        "resizable": true
      }
    ]
  }
}
